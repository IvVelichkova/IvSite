@model ArticleListingViewModel
@{
    ViewData["Title"] = "Blog Articles";
}

<hr />
<br />
<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-10">
        <ul class="list-group center-block" style="margin-bottom:25px">

            @foreach (var art in Model.Articles)
            {
                <li class="list-group-item">
                    <h3> <strong> @art.Title</strong></h3>
                    <br />
                    <small>@Html.Raw(art.Content)</small>
                </li>
            }
        </ul>
    </div>
</div>